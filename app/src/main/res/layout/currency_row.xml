<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewCurrencyCode"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/textViewTransfer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textViewTransfer"
        android:layout_toStartOf="@+id/textViewTransfer"
        android:background="#516fc1"
        android:padding="25px"
        android:text="USA"
        android:textAlignment="center"
        android:textSize="20sp"
        tools:ignore="PxUsage" />

    <TextView
        android:id="@+id/textViewTransfer"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="false"
        android:background="#ffffff"
        android:paddingTop="15dp"
        android:text="22.667"
        android:textAlignment="center"
        android:textColor="#000" />

    <TextView
        android:id="@+id/textViewTypeCurrency"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#b2bcb0"
        android:padding="15dp"
        android:text="USD"
        android:textAlignment="center"
        android:textColor="#000"
        android:layout_toRightOf="@+id/textViewTransfer"
        android:layout_toEndOf="@+id/textViewTransfer" />
</RelativeLayout>